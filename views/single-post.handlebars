<br>  
    <div class="container card">
            <div class="card-header">
                {{post.title}}
            </div>
            <div class="card-body">
                <h4 class="card-text">{{post.description}}</h4>
                <div>
                    <p><h5>Comments:</h5>
                    {{#each post.comments as |c|}} 
                        {{c.comment_text}} ------- {{c.user.username}}
                        <br> 
                    {{/each}}
                </p>
                </div>
            </div>            
    </div>

    